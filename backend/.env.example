# Flask
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=super-secret-key

# Database
DATABASE_URL=sqlite:///boilerplate.db
# For PostgreSQL: postgresql://boileruser:boilerpass@db:5432/boilerdb
# For MySQL: mysql+pymysql://boileruser:boilerpass@db:3306/boilerdb

# CORS
CORS_ORIGINS=http://localhost:3000

# Security
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True

# Server
PORT=5000

# Rate Limiting
RATELIMIT_STORAGE_URI=memory://
# For production, use redis://localhost:6379/0
