# Flask
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=super-secret-key

# Database Storage
DATABASE_URL=sqlite:///boilerplate.db
# For SQLite (development): sqlite:///boilerplate.db
# For PostgreSQL (development): postgresql://localhost:5432/boilerplate
# For PostgreSQL (docker): postgresql://boileruser:boilerpass@db:5432/boilerdb
# For PostgreSQL (production with auth): postgresql://user:password@postgres.example.com:5432/dbname
# For PostgreSQL (connection pooling): postgresql+psycopg2://user:pass@host:5432/db?max_connections=20
# For MySQL (development): mysql+pymysql://root:pass@localhost:3306/boilerplate
# For MySQL (docker): mysql+pymysql://boileruser:boilerpass@db:3306/boilerdb
# For MySQL (production with auth): mysql+pymysql://user:password@mysql.example.com:3306/dbname
# For MySQL (with SSL): mysql+pymysql://user:pass@host:3306/db?ssl_ca=/path/to/ca.pem

# CORS
CORS_ORIGINS=http://localhost:3000

# Security
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True

# Server
PORT=5000

# Rate Limiting Storage
RATELIMIT_STORAGE_URI=memory://
# For Redis (development): redis://localhost:6379/0
# For Redis (docker): redis://redis:6379/0
# For Redis (production with auth): redis://:password@redis.example.com:6379/0
# For Redis Cluster: redis+cluster://localhost:7000,localhost:7001,localhost:7002/0
